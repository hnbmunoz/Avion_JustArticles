<ArticleIndex class="flex-column">
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article|%>
        <tr>
          <td><%= article.id%></td>
          <td><%= article.name%></td>
          <td><%= article.body%></td>
          <td> <%= link_to "Modify Article", edit_article_path(article.id) %>  |</td>
          <td> <%= link_to "Show Article", show_article_path(article.id) %>  |</td>
          <td><%= button_to "Delete Article", destroy_article_path(article.id), method: :delete , confirm: "Are you sure?" %>  </td>
          <!--  -->
        </tr>
      <%end%>
    </tbody>
  </table>

  <div style="margin-top: 1rem;">
    <%= link_to " Create new Article ", new_article_path %>
  </div>
</ArticleIndex>